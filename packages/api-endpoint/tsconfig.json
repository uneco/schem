{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "strict": true,
    "composite": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true
  },
  "references": [{
    "path": "../core"
  }],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
